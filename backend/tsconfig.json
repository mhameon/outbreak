{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "strict": true,
    "outDir": "./build",
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "#engine/*": [
        "./src/engine/*"
      ],
      "#server/*": [
        "./src/server/*"
      ],
      "#shared/*": [
        "./src/shared/*"
      ]
    }
  },
  "include": [
    "src",
    "test",
    "config"
  ]
}
