{
  "name": "outbreak-backend",
  "version": "1.0.0",
  "description": "Zombies experiments",
  "author": "Matt",
  "main": "build/src/index.js",
  "scripts": {
    "start": "node --enable-source-maps build/src",
    "exp": "node --enable-source-maps build/src/engine/experiment.js",
    "dev": "tsc-watch --onSuccess 'npm run start'",
    "build": "echo 'Compiling TypeScript' && tsc --version && tsc",
    "lint": "eslint --cache 'src/**'",
    "test": "mocha",
    "test:watch": "tsc-watch --onSuccess 'npm run test -- --reporter=dot'",
    "test:coverage": "nyc --reporter=text --reporter=html mocha",
    "postinstall": "npm run clean && npm run build",
    "clean": "npx rimraf 'build/**/!(tsconfig.tsbuildinfo)'"
  },
  "devDependencies": {
    "@types/config": "0.0.41",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "config": "^3.3.7",
    "express": "^4.17.3",
    "socket.io": "^4.2.0",
    "tsc-watch": "^4.6.2",
    "tumult": "^3.0.14",
    "winston": "^3.6.0"
  },
  "type": "commonjs",
  "imports": {
    "#engine/*": "./build/src/engine/*.js",
    "#server/*": "./build/src/server/*.js",
    "#shared/*": "./build/src/shared/*.js"
  }
}
