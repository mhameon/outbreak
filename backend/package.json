{
  "name": "outbreak-server",
  "version": "1.0.0",
  "description": "Zombies experiments",
  "main": "src/index.ts",
  "scripts": {
    "start": "node --enable-source-maps build/src",
    "exp": "node --enable-source-maps build/src/engine/experiment.js",
    "start:dev": "tsc-watch --noClear --onSuccess 'npm run start'",
    "build": "echo 'Compiling TypeScript' && tsc --version && tsc",
    "lint": "eslint 'src/**'",
    "test": "mocha --bail build/test/**/*.js",
    "postinstall": "npm run clean && npm run build",
    "clean": "npx rimraf build",

    "dev": "concurrently -k -i --default-input-target 1 -n ' TS ,Node' -c 'yellow,gray' 'tsc -w' npm:start"
  },
  "author": "Matt",
  "devDependencies": {
    "@types/config": "0.0.38",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-typescript-sort-keys": "^1.5.0"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "config": "^3.3.3",
    "express": "^4.17.1",
    "mocha": "^8.2.1",
    "module-alias": "^2.2.2",
    "socket.io": "^3.1.1",
    "tsc-watch": "^4.2.9",
    "tumult": "^3.0.14",
    "typescript": "^4.1.3",
    "winston": "^3.3.3"
  },
  "_moduleAliases": {
    "@engine": "build/src/engine",
    "@server": "build/src/server",
    "@shared": "build/src/shared"
  }
}
