{
  "name": "outbreak-backend",
  "version": "1.0.0",
  "description": "Zombies experiments",
  "author": "Matt",
  "main": "build/src/index.js",
  "scripts": {
    "start": "node --enable-source-maps build/src",
    "exp": "node --enable-source-maps build/src/engine/experiment.js",
    "dev": "tsc-watch --onSuccess 'npm run start'",
    "build": "echo 'Compiling TypeScript' && tsc --version && tsc",
    "lint": "eslint --cache 'src/**'",
    "test": "mocha",
    "test:coverage": "nyc --reporter=text --reporter=html mocha",
    "postinstall": "npm run clean && npm run build",
    "clean": "npx rimraf build"
  },
  "devDependencies": {
    "@types/config": "0.0.38",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-typescript-sort-keys": "^1.6.0",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "socket.io": "^4.0.2",
    "tsc-watch": "^4.2.9",
    "tumult": "^3.0.14",
    "winston": "^3.3.3"
  },
  "_moduleAliases": {
    "@engine": "build/src/engine",
    "@server": "build/src/server",
    "@shared": "build/src/shared"
  }
}
