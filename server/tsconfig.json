{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2018"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "strict": true,
    "outDir": "build/",
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@engine/*": [
        "./src/engine/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
