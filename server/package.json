{
  "name": "outbreak-server",
  "version": "1.0.0",
  "description": "Zombies experiments",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_CONFIG_DIR=../config node --enable-source-maps build/",
    "debug": "NODE_CONFIG_DIR=../config DEBUG=socket.io:* node --enable-source-maps build/",
    "start:dev": "tsc-watch --onSuccess 'npm run start'",
    "build": "npm run clean && npm run create:symlink && echo 'Using TypeScript' && tsc --version && tsc",
    "lint": "eslint 'src/**'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npm run build",
    "clean": "npx rimraf build",
    "create:symlink": "./symlink.sh"
  },
  "author": "Matt",
  "devDependencies": {
    "@types/config": "0.0.38",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-typescript-sort-keys": "^1.5.0"
  },
  "dependencies": {
    "config": "^3.3.3",
    "express": "^4.17.1",
    "mocha": "^8.2.1",
    "module-alias": "^2.2.2",
    "socket.io": "^3.1.0",
    "spdy": "^4.0.2",
    "tsc-watch": "^4.2.9",
    "tumult": "^3.0.14",
    "typescript": "^4.1.3",
    "winston": "^3.3.3"
  },
  "_moduleAliases": {
    "@engine": "build/engine"
  }
}
