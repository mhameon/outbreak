{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "strict": true,
    "outDir": "build/",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es2018"
    ],
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
    }
  },
  "include": [
    "src"
  ]
}
